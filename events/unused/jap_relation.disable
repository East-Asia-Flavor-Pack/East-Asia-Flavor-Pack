#relief fund
jap_relation.20 = { 
	type = country_event
	placement = root

	title = jap_relation.20.t
	desc = jap_relation.20.d
	flavor = jap_relation.20.f

	gui_window = event_window_1char_tabloid

	left_icon = scope:relief_participant_1

	on_created_soundeffect = "event:/SFX/UI/Alerts/event_appear"
	on_opened_soundeffect = "event:/SFX/Events/misc/1Character_Banner"

	icon = "gfx/interface/icons/event_icons/event_skull.dds"
	
	duration = 3

	trigger = {
		exists = c:JAP
		exists = c:NIP
		any_country = {
			NOT = {this=c:JAP}
			NOT = {this=c:NIP}
			is_subject_type = subject_type_daimyo
			is_subject_of = c:JAP
		}
	}

	immediate = {
		random_country = {
			limit = { 
				NOT = {this=c:NIP}
				is_subject_type = subject_type_daimyo
				is_subject_of = c:JAP
			}
			save_scope_as = relief_country_1
			ruler = {
				save_scope_as = relief_participant_1
			}
		}
	}

	option = {#fund him
		name = jap_relation.20.a
		default_option = yes
		ai_chance = {base = 9}

		add_modifier = {
			name = modifier_daimyo_relief
			multiplier = money_amount_multiplier_medium
			months = 60
		}

		scope:relief_country_1 = {
			add_modifier = {
				name = modifier_daimyo_relief_receive
				multiplier = money_amount_multiplier_medium
				months = 60
			}
			change_relations = {
					country = c:JAP
					value = 30
			}
			change_relations = {
					country = c:NIP
					value = -30
			}
		}
	}

	option = {#do not fund him

		name = jap_relation.20.b
		ai_chance = {base = 1}

		scope:relief_country_1 = {
			change_relations = {
					country = c:JAP
					value = -30
			}
			change_relations = {
					country = c:NIP
					value = 30
			}
		}
	}
}


